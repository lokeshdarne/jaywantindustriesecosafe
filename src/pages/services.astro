---
import BaseLayout from '../layouts/BaseLayout.astro';
import Card from '../components/Card.astro';
import content from '../content/content.json'; // Import the content

const servicesContent = content.services;
---

<BaseLayout title={servicesContent.pageTitle}>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-20">
    <h1 class="text-4xl md:text-5xl font-bold text-center mb-16 md:mb-20 text-brand-text-primary">{servicesContent.mainTitle}</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16 md:mb-20">
      {servicesContent.cards.map(card => (
        <Card
          title={card.title}
          body={card.body}
          // Add imgSrc/imgAlt here if specific images are defined for these cards in content.json later
        />
      ))}
    </div>

    <div class="bg-brand-surface rounded-lg shadow-card border border-brand-border/50 p-10 text-center">
      <h2 class="text-3xl font-semibold mb-5 text-brand-text-primary">{servicesContent.closing.title}</h2>
      <p class="text-brand-text-secondary max-w-2xl mx-auto mb-8">
        {servicesContent.closing.body}
      </p>
      <a href={servicesContent.closing.ctaLink} class="inline-block bg-brand-primary hover:bg-brand-primary-dark text-brand-text-on_primary font-semibold py-3 px-8 rounded-lg transition-colors duration-200 shadow-md hover:shadow-lg transform hover:-translate-y-0.5">
        {servicesContent.closing.ctaButton}
      </a>
    </div>

  </div>
</BaseLayout>
