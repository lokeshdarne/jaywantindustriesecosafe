---
import BaseLayout from '../layouts/BaseLayout.astro';

const companyName = "Jaywant industries common bio medical waste management facility";
const address = "Plot No. D-43, MIDC Area, Yavatmal, Maharashtra 445001, India"; // Placeholder
const email = "jaywantecosafe@gmail.com"; // Placeholder
const phone = "+91-9423137760"; // Placeholder
const mapEmbedUrl = `https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3736.6000000000004!2d78.12000000000001!3d20.400000000000002!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMjDCsDI0JzAwLjAiTiA3OMKwMDcnMTIuMCJF!5e0!3m2!1sen!2sin!4v1678886400000!5m2!1sen!2sin`; // Placeholder
---

<BaseLayout title="Contact Us">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-20"> {/* Adjusted padding */}
    <h1 class="text-4xl md:text-5xl font-bold text-center mb-16 md:mb-20 text-brand-text-primary">Get In Touch</h1> {/* Adjusted margin */}

    <div class="grid grid-cols-1 lg:grid-cols-5 gap-12">

      {/* Contact Form - Takes 3 columns on large screens */}
      <div class="lg:col-span-3 bg-brand-surface rounded-lg shadow-card border border-brand-border/50 p-8 md:p-10">
        <h2 class="text-3xl font-semibold mb-8 text-brand-text-primary">Send Us a Message</h2> {/* Emoji removed */}
        <form action="#" method="POST"> {/* Needs backend integration */}
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-6">
            <div class="sm:col-span-1">
              <label for="name" class="block text-sm font-medium text-brand-text-secondary mb-1">Your Name</label>
              <input type="text" name="name" id="name" autocomplete="name" required placeholder="e.g., John Doe" class="block w-full">
            </div>
            <div class="sm:col-span-1">
              <label for="hospital_name" class="block text-sm font-medium text-brand-text-secondary mb-1">Hospital/Clinic Name</label>
              <input type="text" name="hospital_name" id="hospital_name" required placeholder="e.g., City General Hospital" class="block w-full">
            </div>
            <div class="sm:col-span-1">
              <label for="email" class="block text-sm font-medium text-brand-text-secondary mb-1">Email Address</label>
              <input type="email" name="email" id="email" autocomplete="email" required placeholder="you@example.com" class="block w-full">
            </div>
             <div class="sm:col-span-1">
              <label for="phone" class="block text-sm font-medium text-brand-text-secondary mb-1">Phone Number</label>
              <input type="tel" name="phone" id="phone" autocomplete="tel" required placeholder="+91-XXX-XXX-XXXX" class="block w-full">
            </div>
            <div class="sm:col-span-2">
              <label for="message" class="block text-sm font-medium text-brand-text-secondary mb-1">Your Message</label>
              <textarea id="message" name="message" rows="5" required placeholder="How can we help you today?" class="block w-full"></textarea>
            </div>
          </div>
          <div class="mt-8">
            <button type="submit" class="w-full inline-flex justify-center py-3 px-6 border border-transparent shadow-md text-base font-medium rounded-md text-brand-text-on_primary bg-brand-primary hover:bg-brand-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-primary transition-colors duration-200 transform hover:-translate-y-0.5">
              Submit Inquiry
            </button>
          </div>
           <p class="mt-5 text-xs text-center text-brand-text-secondary">We typically respond within 1 business day.</p>
        </form>
      </div>

      {/* Contact Details & Map - Takes 2 columns on large screens */}
      <div class="lg:col-span-2 space-y-8">
        <div class="bg-brand-surface rounded-lg shadow-card border border-brand-border/50 p-8">
          <h2 class="text-2xl font-semibold mb-5 text-brand-primary">Contact Information</h2> {/* Emoji removed */}
          <address class="not-italic text-brand-text-secondary space-y-4">
            <p><strong class="text-brand-text-primary block text-sm uppercase tracking-wide">Address:</strong>{address}</p>
            <p><strong class="text-brand-text-primary block text-sm uppercase tracking-wide">Email:</strong> <a href={`mailto:${email}`} class="text-brand-primary hover:text-brand-primary-dark break-all">{email}</a></p>
            <p><strong class="text-brand-text-primary block text-sm uppercase tracking-wide">Phone:</strong> <a href={`tel:${phone}`} class="text-brand-primary hover:text-brand-primary-dark">{phone}</a></p>
            <p><strong class="text-brand-text-primary block text-sm uppercase tracking-wide">Operating Hours:</strong> Mon - Sat, 9:00 AM - 6:00 PM (Office)</p>
             <p class="text-xs mt-3">Waste collection operates as per schedule.</p>
          </address>
        </div>

        <div class="bg-brand-surface rounded-lg shadow-card border border-brand-border/50 overflow-hidden">
           <h2 class="text-2xl font-semibold p-6 pb-4 text-brand-primary">Find Us</h2> {/* Emoji removed */}
           <div class="aspect-w-16 aspect-h-9">
             <iframe
                src={mapEmbedUrl}
                class="w-full h-full"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                title="Jaywant Industries Location on Google Map">
             </iframe>
           </div>
        </div>
      </div>

    </div>
  </div>
</BaseLayout>
